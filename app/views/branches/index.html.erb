<p id="notice"><%= notice %></p>

<br>

<table class="table">
  <thead class="table-secondary">
    <tr>
      <th scope="col">Branch name</th>
      <th scope="col">Branch address</th>
      <th scope="col">Bank Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <% @branches.each do |branch| %>
        <% if branch.bank == current_bank %>
        <tr>
          <td><%= branch.branch_name %></td>
          <td><%= branch.branch_address %></td>
          <td><%= branch.bank_id %></td>
          <td><button type="button" class="btn btn-outline-secondary"><%= link_to 'Show', branch %></button></td>
          <td><button type="button" class="btn btn-outline-secondary"><%= link_to 'Edit', edit_branch_path(branch) %></button></td>
          <td><button type="button" class="btn btn-outline-secondary"><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-dark"><%= link_to 'New Branch', new_branch_path %></button>
<button type="button" class="btn btn-dark"><%= link_to 'Back', banks_path %></button>
