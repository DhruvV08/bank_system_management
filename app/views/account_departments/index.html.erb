<p id="notice"><%= notice %></p>

<h1>Account Departments</h1>

<table class="table">
  <thead class="table-secondary">
    <tr>
      <th>Account type</th>
      <th>Account no</th>
      <th>Account balance</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_departments.each do |account_department| %>
      <tr>
        <td><%= account_department.account_type %></td>
        <td><%= account_department.account_no %></td>
        <td><%= account_department.account_balance %></td>
        <td><%= account_department.branch_id %></td>
        <td><%= link_to 'Show', account_department, class: "btn btn-outline-secondary"  %></td>
        <td><%= link_to 'Edit', edit_account_department_path(account_department), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', account_department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


