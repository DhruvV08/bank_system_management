<p id="notice"><%= notice %></p>

<h1>Loan Departments</h1>

<table class="table">
  <thead class="table-secondary">
    <tr>
      <th>Loan type</th>
      <th>Loan amount</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loan_departments.each do |loan_department| %>
      <tr>
        <td><%= loan_department.loan_type %></td>
        <td><%= loan_department.loan_amount %></td>
        <td><%= loan_department.branch_id %></td>
        <td><%= link_to 'Show', loan_department, class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_loan_department_path(loan_department), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', loan_department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

